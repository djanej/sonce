<h1>Novice</h1>
<ul class="news">
	{% for post in collections.news %}
		<li>
			<a href="{{ post.url }}">{{ post.data.title }}</a>
			{% if post.date %}<div class="time">{{ post.date | dateDisplay }}</div>{% endif %}
			{% if post.data.description %}<div>{{ post.data.description }}</div>{% endif %}
		</li>
	{% else %}
		<li>Trenutno ni novic.</li>
	{% endfor %}
</ul>

